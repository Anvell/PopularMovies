<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/movie_grid_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/movie_grid_star"
        app:srcCompat="@drawable/ic_favorite_black"
        android:tint="@android:color/background_light"
        android:layout_margin="@dimen/card_view_padding"
        app:layout_constraintEnd_toEndOf="@id/movie_grid_image"
        app:layout_constraintTop_toTopOf="@id/movie_grid_image"
        android:layout_width="@dimen/ic_poster"
        android:layout_height="@dimen/ic_poster"
        android:visibility="gone"
        android:alpha="0.5"
        tools:ignore="ContentDescription" />

</android.support.constraint.ConstraintLayout>